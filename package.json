{
  "name": "secure-messenger",
  "version": "1.0.0",
  "description": "Защищенный веб-мессенджер с end-to-end шифрованием",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client:dev": "vite",
    "client:build": "tsc && vite build",
    "client:preview": "vite preview",
    "build": "npm run client:build",
    "dev:all": "concurrently \"npm run dev\" \"npm run client:dev\""
  },
  "keywords": [
    "messenger",
    "websocket",
    "e2e-encryption",
    "chat"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.16.3",
    "redis": "^5.8.3",
    "winston": "^3.18.3",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "concurrently": "^8.2.2"
  }
}
